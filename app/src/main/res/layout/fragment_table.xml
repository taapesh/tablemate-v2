<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/dining_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="YOU ARE DINING AT"/>

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dining_at"
        android:textSize="19sp"
        android:textColor="#333"
        android:text="Name"/>

    <TextView
        android:id="@+id/server_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_name"
        android:layout_centerHorizontal="true"
        android:text="Your server is Bob"/>

    <TextView
        android:id="@+id/party_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/server_name"
        android:text="3 Tablemates"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/party_size"
        android:layout_marginTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/request"
            style="@style/button"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:text="Table Service"/>

        <Button
            android:id="@+id/order"
            style="@style/button"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="Order"/>

    </LinearLayout>

    <Button
        android:id="@+id/view_check"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/main_red"
        android:textColor="@color/off_white"
        android:text="View Check"
        android:layout_alignParentBottom="true" />

</RelativeLayout>