<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aryamohades.tablemate.activity.TableActivity">

    <TextView
        android:id="@+id/txt_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_server_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_restaurant_name" />

    <TextView
        android:id="@+id/txt_party_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_server_name" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_party_size"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_request_service"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Request Service" />

        <Button
            android:id="@+id/btn_order"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Order" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_view_check"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="View Check"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
