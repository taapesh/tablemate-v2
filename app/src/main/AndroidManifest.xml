<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aryamohades.tablemate" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChooseUserActivity"
            android:label="@string/title_activity_choose_user" >
        </activity>
        <activity
            android:name=".activity.CustomerHomeActivity"
            android:label="@string/title_activity_customer_home" >
        </activity>
        <activity
            android:name=".activity.ServerHomeActivity"
            android:label="@string/title_activity_server_home" >
        </activity>
        <activity
            android:name=".activity.TableActivity"
            android:label="@string/title_activity_table" >
        </activity>
        <activity
            android:name=".activity.ServerActivity"
            android:label="@string/title_activity_server" >
        </activity>
        <activity
            android:name=".activity.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".activity.MenuDetailActivity"
            android:label="@string/title_activity_menu_detail" >
        </activity>
        <activity
            android:name=".activity.TableDetailActivity"
            android:label="@string/title_activity_table_detail" >
        </activity>
        <activity
            android:name=".activity.PaymentActivity"
            android:label="@string/title_activity_payment" >
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
