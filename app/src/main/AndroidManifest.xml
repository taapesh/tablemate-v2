<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aryamohades.tablemate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
            android:label="@string/title_activity_start" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_start" />
        <activity
            android:name=".activity.ServerHomeActivity"
            android:label="@string/title_activity_server_home" />
        <activity
            android:name=".activity.TableActivity"
            android:label="@string/title_activity_table" />
        <activity
            android:name=".activity.ServerActivity"
            android:label="@string/title_activity_server" />
        <activity
            android:name=".activity.SplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
